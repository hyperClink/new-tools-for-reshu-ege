{
  "name": "Инструменты и Ответы для Решу ЕГЭ",
  "version": "2.2",
  "description": "Показывает решения к вариантам Решу ЕГЭ/ОГЭ, позволяет заморозить таймер, выставить любое время.",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://*.sdamgia.ru/test?id*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ansThroughNullIDShow.js",
        "ansThroughNullIDAutoNC.js",
        "ansThroughNullIDAuto.js",
        "timerIni.js",
        "timerStp.js",
        "timerRnm.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "tools16.png",
      "32": "tools32.png",
      "48": "tools48.png",
      "128": "tools128.png"
    }
  },
  "icons": {
    "16": "tools16.png",
    "32": "tools32.png",
    "48": "tools48.png",
    "128": "tools128.png"
  }
}