{
  "name": "Инструменты и Ответы для Решу ЕГЭ",
  "version": "2.1",
  "description": "Показывает решения к вариантам Решу ЕГЭ/ОГЭ, позволяет заморозить таймер, выставить любое время.",
  "manifest_version": 3,

  "permissions": [
          "activeTab",
          "declarativeContent"
        ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["*://*.sdamgia.ru/test?id*"]
  }],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "tools16.png",
        "32": "tools32.png",
        "48": "tools48.png",
        "128": "tools128.png"
      }
  },

  "icons": {
      "16": "tools16.png",
      "32": "tools32.png",
      "48": "tools48.png",
      "128": "tools128.png"
    }
}
